<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sales.recorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.sales.recorder.screen.MainScreen"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.sales.recorder.screen.SelectCustomerSalesmanScreen"
            android:screenOrientation="portrait" />
        
        <activity 
            android:name="com.sales.recorder.screen.AddSalesScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        
        <activity 
            android:name="com.sales.recorder.screen.SaleDetailScreen"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.sales.recorder.screen.UpdateSaleScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        
        <activity 
            android:name="com.sales.recorder.screen.RecoveryScreen"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.sales.recorder.screen.ReportsScreen"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.sales.recorder.screen.CustomerInvoiceScreen"
            android:screenOrientation="landscape" />
        
        <activity 
            android:name="com.sales.recorder.screen.SalesmanWiseSaleScreen"
            android:screenOrientation="landscape" />
        
        <activity 
            android:name="com.sales.recorder.screen.RouteWiseSaleScreen"
            android:screenOrientation="landscape" />
        
        <activity
            android:name="com.sales.recorder.screen.DatabaseScreen"
            android:screenOrientation="portrait" />
        
    </application>

</manifest>